{
  "schedules": {
    "hourly": {
      "modules": ["security", "profiles", "network", "management"],
      "interval_seconds": 3600,
      "launchd_label": "com.github.reportmate.hourly",
      "description": "Modules that need frequent updates for security and configuration monitoring"
    },
    "fourhourly": {
      "modules": ["applications", "inventory", "system"],
      "interval_seconds": 14400,
      "launchd_label": "com.github.reportmate.fourhourly",
      "description": "Modules that change moderately - software installs and basic device info"
    },
    "daily": {
      "modules": ["hardware", "displays"],
      "calendar_interval": {
        "hour": 9,
        "minute": 0
      },
      "launchd_label": "com.github.reportmate.daily",
      "description": "Modules that rarely change - physical hardware and peripheral devices"
    },
    "boot": {
      "modules": "all",
      "run_at_load": true,
      "launch_only_once": true,
      "launchd_label": "com.github.reportmate.boot",
      "description": "Full collection at boot to establish baseline"
    }
  },
  "launchd_settings": {
    "nice": 10,
    "process_type": "Background",
    "abandon_process_group": true,
    "log_directory": "/Library/Managed Reports/logs",
    "associated_bundle_id": "com.github.reportmate.managedreportsrunner"
  },
  "paths": {
    "app_bundle": "/usr/local/reportmate/ReportMate.app",
    "binary": "/usr/local/reportmate/ReportMate.app/Contents/MacOS/managedreportsrunner",
    "wrapper_script": "/usr/local/reportmate/managedreportsrunner",
    "launchdaemons": "/Library/LaunchDaemons",
    "logs": "/Library/Managed Reports/logs",
    "config": "/Library/Managed Reports"
  },
  "version": "1.0.0",
  "platform": "macOS",
  "updated": "2025-12-27T00:00:00Z"
}
